{
  "manifest_version": 3,
  "name": "Super-Son1k Token Capture",
  "version": "2.0.0",
  "description": "Automatically capture and manage Suno tokens for Super-Son1k-2.0",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "webRequest",
    "webRequestBlocking",
    "tabs"
  ],
  "host_permissions": [
    "https://suno.com/*",
    "https://*.suno.com/*",
    "https://api.suno.ai/*",
    "https://*.super-son1k.com/*",
    "https://the-generator.son1kvers3.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://suno.com/*", "https://*.suno.com/*"],
      "js": ["content-suno.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://*.super-son1k.com/*"],
      "js": ["content-son1k.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Super-Son1k Token Capture",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://suno.com/*", "https://*.suno.com/*"]
    }
  ]
}
