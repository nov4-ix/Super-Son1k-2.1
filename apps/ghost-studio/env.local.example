# Ghost Studio Environment Variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration (for audio storage)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Suno API Configuration
VITE_SUNO_API_KEY=your_suno_api_key_here

# App Configuration
VITE_APP_URL=http://localhost:3001
VITE_ENVIRONMENT=development

# Backend URL (required for music generation)
# Development: http://localhost:3001
# Production: Set to your Railway backend URL (e.g., https://your-backend.railway.app)
VITE_BACKEND_URL=http://localhost:3001

# Optional: Analytics (if you want to add tracking)
VITE_ANALYTICS_ID=your_analytics_id

# Optional: Sentry (for error tracking)
VITE_SENTRY_DSN=your_sentry_dsn